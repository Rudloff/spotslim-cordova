<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1001" id="pro.rudloff.spotslim" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SpotSlim</name>
    <description>
        SpotSlim Cordova app
    </description>
    <author email="contact@rudloff.pro" href="https://rudloff.pro/">
        Pierre Rudloff
    </author>
    <content src="index.html" />
    <icon src="www/img/logo_512.png" />
    <access origin="https://sdk.scdn.co" />
    <access origin="https://i.scdn.co" />
    <access origin="https://seektables.scdn.co" />
    <access origin="https://audio-fa.scdn.co" />
    <access origin="https://apresolve.spotify.com" />
    <access origin="https://api.spotify.com" />
    <access launch-external="yes" origin="https://accounts.spotify.com" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
    <preference name="android-minSdkVersion" value="19" />
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="spotslim" />
        <variable name="ANDROID_SCHEME" value=" " />
        <variable name="ANDROID_HOST" value=" " />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
</widget>
